<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/BaseRelativeLayout_0dpPadding"
    tools:context="example.org.bjjanatest.DeleteWeight"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:orientation="horizontal"
        android:layout_above="@+id/bottombar_deleteweight">
        <View
            style="@style/DividerLine" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottombar_deleteweight"
        style="@style/BottomActionBar">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageButton
                android:id="@+id/del_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:onClick="deleteWeight"
                android:src="@drawable/trash_100"
                android:background="@android:color/transparent"
                android:text="Delete Weight" />
        </LinearLayout>

    </RelativeLayout>






    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        style="@style/TopContent"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <example.org.bjjanatest.MyTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delete weight on:"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <Spinner
                    android:id="@+id/del_month_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center" />
                <Spinner
                    android:id="@+id/del_day_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center" />
                <Spinner
                    android:id="@+id/del_year_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center" />
            </LinearLayout>




        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
