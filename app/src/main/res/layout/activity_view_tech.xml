<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    style="@style/BaseRelativeLayout_0dpPadding"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        style="@style/TopContent"
        android:layout_alignParentTop="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                style="@style/PaddingStyle">
    <example.org.bjjanatest.MyTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_tech_activity" />
        </LinearLayout>


            <!--divider line-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/PaddingStyle"
                android:orientation="vertical">
                <View
                    style="@style/DividerLine" />
            </LinearLayout>
            <!--divider line-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            style="@style/PaddingStyle">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <example.org.bjjanatest.MyTextView
            android:id="@+id/view_techLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/tech_name" />

        <example.org.bjjanatest.MyTextView
            android:id="@+id/view_techName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="" />


    </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            style="@style/PaddingStyle">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <example.org.bjjanatest.MyTextView
            android:id="@+id/view_techTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/tech_type" />

        <example.org.bjjanatest.MyTextView
            android:id="@+id/view_techType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:text="" />

    </RelativeLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            style="@style/PaddingStyle">

        <example.org.bjjanatest.MyTextView
            android:id="@+id/view_techNotesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="@string/tech_note" />

            </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:paddingTop="16dp"
            style="@style/PaddingStyle">

        <example.org.bjjanatest.MyTextView
            android:id="@+id/view_techNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:gravity="center_vertical"
            android:text="" />

           </LinearLayout>


        </LinearLayout>
        </RelativeLayout>
    </ScrollView>






    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:orientation="horizontal"
        android:layout_above="@+id/bottombar_edittourn">
        <View
            style="@style/DividerLine" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottombar_edittourn"
        style="@style/BottomActionBar">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageButton
                android:id="@+id/view_del_view_tech"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:onClick="deleteTech"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/trash_50"
                android:background="@android:color/transparent"
                android:text="Delete" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageButton
                android:id="@+id/view_edit_tech"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:onClick="editTech"
                android:layout_marginLeft="10dp"
                android:src="@drawable/edit_50"
                android:background="@android:color/transparent"
                android:layout_marginRight="10dp"
                android:text="Edit" />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center">
            <ImageButton
                android:id="@+id/view_finish_view_tech"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center"
                android:src="@drawable/previous_50"
                android:background="@android:color/transparent"
                android:onClick="finishViewTech"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="Back" />
        </LinearLayout>
    </LinearLayout>

    </RelativeLayout>




</RelativeLayout>
