<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.org.bjjanatest" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddTourney"
            android:label="@string/title_activity_add_tourney"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AddTech"
            android:label="@string/title_activity_add_tech" android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ViewTourn"
            android:label="@string/title_activity_view_tourn" android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ViewTech"
            android:label="@string/title_activity_view_tech" android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".EditTech"
            android:label="@string/title_activity_edit_tech" android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AddWeight"
            android:label="@string/title_activity_add_weight" android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".AddTime"
            android:label="@string/title_activity_add_time" android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".AddDrill"
            android:label="@string/title_activity_add_drill" android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".EditDrill"
            android:label="@string/title_activity_edit_drill" android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".EditTourn"
            android:label="@string/title_activity_edit_tourn" android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".DeleteWeight"
            android:label="@string/title_activity_delete_weight" android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login" android:screenOrientation="portrait" >
        </activity>


        <uses-permission android:name="android.permission.INTERNET"/>
        <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

        <activity
            android:name=".ItemListActivity"
            android:label="@string/title_item_list" >
        </activity>
        <activity
            android:name=".ItemDetailActivity"
            android:label="@string/title_item_detail"
            android:parentActivityName=".ItemListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="example.org.bjjanatest.ItemListActivity" />
        </activity>
    </application>

</manifest>
