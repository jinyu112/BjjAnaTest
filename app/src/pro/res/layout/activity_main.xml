<com.analytics.bjj.FragmentNavigationDrawer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <FrameLayout android:id="@+id/mainContent"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

    </FrameLayout>
    </LinearLayout>

    <ListView android:id="@+id/drawerList"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:entries="@array/drawerBar"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:dividerHeight="0dp"
        android:background="#FFFFFF">


    </ListView>

</com.analytics.bjj.FragmentNavigationDrawer>